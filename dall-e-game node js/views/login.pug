extends layout

block content
  link(rel="preconnect" href="https://fonts.googleapis.com")
  link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
  link(href="https://fonts.googleapis.com/css2?family=Roboto&family=Rubik:wght@500&display=swap" rel="stylesheet")
  div(id="game")
    h1(class='') Welcome
    h2(class='') Please insert a username
    form(action='/login' method='POST')
      label(for='username')
      input(class='mobile', id="usernameInput", type='text', name='username')
      input(type="submit", value="submit", id="usernameSubmit" class="mobile" onclick="sessionStorage.setItem('username', username.value);")

  if errors
    ul
      for error in errors
        li!= error.msg